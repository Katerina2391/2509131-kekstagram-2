
const imgUploadSection = document.querySelector('.img-upload');
//const imgUploadPreview = imgUploadSection.querySelector('.img-upload__preview').querySelector('img');
const effectSliderElement = imgUploadSection.querySelector('.effect-level__slider');
const effectLevelValue = imgUploadSection.querySelector('.effect-level__value');
const effects = imgUploadSection.querySelectorAll('.effects__radio');
const chromeEffect = imgUploadSection.querySelector('#effect-chrome');
const sepiaEffect = imgUploadSection.querySelector('#effect-sepia');
const marvinEffect = imgUploadSection.querySelector('#effect-marvin');
const phobosEffect = imgUploadSection.querySelector('#effect-phobos');
const heatEffect = imgUploadSection.querySelector('#effect-heat');

noUiSlider.create(effectSliderElement, {
  range: {
    min: 0,
    max: 1,
  },
  start: 1,
  step: 0.1,
  connect: 'lower',
  format: {
    to: function (value) {
      if (Number.isInteger(value)) {
        return value.toFixed(0);
      }
      return value.toFixed(1);
    },
    from: function (value) {
      return parseFloat(value);
    },
  },
});

effectLevelValue.value = 1;

effectSliderElement.noUiSlider.on('update', () => {
  effectLevelValue.value = effectSliderElement.noUiSlider.get();
});

for (const effect of effects) {
  effect.addEventListener('change', () => {
    if (marvinEffect.checked) {
      effectSliderElement.noUiSlider.updateOptions({
        range: {
          min: 0,
          max: 100,
        },
        start: 100,
        step: 1,
      });
    } else if (phobosEffect.checked) {
      effectSliderElement.noUiSlider.updateOptions({
        range: {
          min: 0,
          max: 3,
        },
        start: 3,
        step: 0.1,
      });
    } else if (heatEffect.checked) {
      effectSliderElement.noUiSlider.updateOptions({
        range: {
          min: 1,
          max: 3,
        },
        start: 3,
        step: 0.1,
      });
    } else {
      effectSliderElement.noUiSlider.updateOptions({
        range: {
          min: 0,
          max: 1,
        },
        start: 1,
        step: 0.1,
      });
    }
  });
}
